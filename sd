echo "----------------------------------------------------------------------------------------------+----------------------------------------------------------------------------------------------"
printf "        File %-80s | File %s\n" $1 $2
echo "----------------------------------------------------------------------------------------------+----------------------------------------------------------------------------------------------"
sdiff -l -w 180 $1 $2 | cat -n | grep -v -e \($
echo "----------------------------------------------------------------------------------------------+----------------------------------------------------------------------------------------------"
echo "End Diff"
